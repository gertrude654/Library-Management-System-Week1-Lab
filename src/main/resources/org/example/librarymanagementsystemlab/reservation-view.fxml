<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.librarymanagementsystemlab.controller.PlaceReservationController">
    <top>
        <MenuBar>
            <!-- Add menu items here if needed -->
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Place Reservation" style="-fx-font-size: 20px;" />
            <HBox spacing="10">
                <Label text="Select Book:" />
                <ComboBox fx:id="bookComboBox" prefWidth="200" />
            </HBox>
            <HBox spacing="10">
                <Label text="Patron ID:" />
                <TextField fx:id="patronIdField" />
            </HBox>
            <Button text="Place Reservation" onAction="#handlePlaceReservation" />
        </VBox>
    </center>

</BorderPane>
